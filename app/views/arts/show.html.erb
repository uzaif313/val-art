<%- model_class = Art -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dd><%=  image_tag(@art.image.url(:medium)) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descrption) %>:</strong></dt>
  <dd><%= @art.descrption %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              arts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_art_path(@art), :class => 'btn btn-default' if policy(@art).edit? %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              art_path(@art),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' if policy(@art).destroy? %>
